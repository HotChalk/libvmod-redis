varnishtest "Test VCL temperature & discard."

server s1 {
   rxreq
   txresp
} -repeat 1 -start

varnish v1 -vcl+backend {
    import redis from "${vmod_topbuild}/src/.libs/libvmod_redis.so";

    sub vcl_init {
        new db1 = redis.db(
            location="${redis_master1_address}",
            connection_timeout=500,
            connection_ttl=0,
            command_timeout=0,
            command_retries=0,
            shared_contexts=false,
            max_contexts=1,
            password="",
            clustered=false,
            max_cluster_hops=0);
        new db2 = redis.db(
            location="${redis_master2_address}",
            connection_timeout=500,
            connection_ttl=0,
            command_timeout=0,
            command_retries=0,
            shared_contexts=true,
            max_contexts=32,
            password="",
            clustered=false,
            max_cluster_hops=0);
    }
} -start

varnish v1 -vcl+backend {
}

varnish v1 -cliok "vcl.state vcl1 cold"

varnish v1 -cliok "vcl.use vcl1"

varnish v1 -cliok "vcl.use vcl2"

varnish v1 -cliok "vcl.discard vcl1"

varnish v1 -expect MGT.child_panic == 0
